BIN    = test_node2lc.exe
OBJS   = sgr_nodes.o test_node2lc.o sgr_lc.o sgr_node2lc.o
SRC    = $(OBJS:%.o=%.cpp)
INC    = $(OBJS:%.o=%.h)
CXX     = g++
CXXFLAGS = -c -g
LINKOPT = 
INCPATH = -I"../../graphbase"

all : $(BIN)

$(BIN) : $(OBJS)
	$(CXX) $(OBJS) -o $(BIN) $(LINKOPT)

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

clean :
	rm -rf *.o
	rm -rf *.so

install : install.bin

install.bin :
	cp *.exe ../../build/bin

